<h1>New Headset</h1>
<%= form_with model: @headset, url: headsets_path do |f| %>
  <%= f.label :name %> <%= f.text_field :name %></br>
  <%= f.label :price %> <%= f.number_field :price, step: 0.01 %></br>
  <%= f.label :description %> <%= f.text_area :description %></br>
  <%= f.submit 'Create Headset' %>
<% end %>
